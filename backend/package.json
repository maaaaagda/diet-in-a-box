{
  "name": "diet-in-a-box-backend",
  "version": "1.0.0",
  "description": "Diet In A Box Backend",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kozikkam/diet-in-a-box"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "NODE_ENV=production pm2 start server.ts",
    "mocha": "nyc mocha -r ts-node/register test/**/*.ts --timeout=10000 --exit",
    "test": "NODE_ENV=test npm run fresh && npm run mocha",
    "dev": "NODE_ENV=development ts-node-dev server.ts",
    "fresh": "npm run clean && npm run seed",
    "clean": "ts-node clean.ts",
    "seed": "ts-node seed.ts",
    "format": "prettier --write --config .prettierrc.json \"**/*.ts\"",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.ts\"",
    "remark": "remark . -o"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.4.1",
    "dotenv-safe": "^8.1.0",
    "ejs": "^2.7.1",
    "expeditious-engine-redis": "^0.1.2",
    "express": "^4.17.1",
    "express-expeditious": "^5.1.1",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.1",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.1",
    "mongoose-paginate-v2": "^1.3.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "remark-cli": "^7.0.0",
    "request-ip": "^2.1.3",
    "trim-request": "^1.0.6",
    "ts-node": "^8.4.1",
    "uuid": "^3.3.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "husky": "^3.0.7",
    "mocha": "^6.2.1",
    "mongo-seeding": "^3.3.0",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "keywords": [
    "javascript",
    "node",
    "express",
    "mongo",
    "mongodb",
    "jwt",
    "diet-in-a-box"
  ]
}
